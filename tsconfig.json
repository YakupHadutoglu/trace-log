{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "typeRoots": ["./src/types", "./node_modules/@types"]
    }
}
